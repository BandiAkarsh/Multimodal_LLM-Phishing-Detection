import pandas as pd
import numpy as np
import yaml
import os

# Load configuration
with open("../07_configs/config.yaml", "r") as f:
    config = yaml.safe_load(f)

# Load datasets
df_combined = pd.read_csv("01_data/raw/combined_dataset.csv")
df_openphish = pd.read_csv("01_data/raw/openphish.txt", header=None, names=["url"])
df_phishtank = pd.read_csv("01_data/raw/phishtank.csv")

# Standardize labels
# Combined dataset: ensure label is 0/1
if df_combined['label'].dtype == 'object':
    df_combined['label'] = df_combined['label'].map({'phishing': 1, 'legitimate': 0, '0': 0, '1': 1}).fillna(0).astype(int)
else:
    df_combined['label'] = df_combined['label'].astype(int)

# OpenPhish: all phishing
df_openphish["label"] = 1

# PhishTank: map 'verified' to 0/1
df_phishtank = df_phishtank[["url", "verified"]].copy()
df_phishtank["label"] = df_phishtank["verified"].map({"yes": 1, "no": 0}).fillna(0).astype(int)

# Combine all datasets
df_all = pd.concat([
    df_combined[["url", "label"]],  # 0/1
    df_openphish[["url", "label"]],  # 1
    df_phishtank[["url", "label"]]   # 0/1
], ignore_index=True)

# Remove duplicates
df_all.drop_duplicates(subset=["url"], inplace=True)

# Save to raw directory
df_all.to_csv("01_data/raw/combined_dataset.csv", index=False)

print(f"âœ… Unified dataset saved: {len(df_all)} samples")
print(f"Phishing: {sum(df_all['label'] == 1)}")
print(f"Legitimate: {sum(df_all['label'] == 0)}")
