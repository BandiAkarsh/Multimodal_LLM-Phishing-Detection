import sys
import os
import yaml
import asyncio
from data_preparation import DataPreprocessor

# Add utils to path
sys.path.append(os.path.abspath("../05_utils"))

# Load configuration
with open("../07_configs/config.yaml", "r") as f:
    config = yaml.safe_load(f)

print("Configuration loaded successfully")

# Initialize preprocessor
preprocessor = DataPreprocessor(config)
print("Preprocessor initialized")

# Process train data (start with small sample)
train_results = await preprocessor.process_dataset(
    csv_path="../01_data/splits/train.csv",
    max_samples=10  # Start with 10 samples
)

# Check results
print("Processing complete:")
print(f"Total: {len(train_results)}")
print(f"Success: {sum(train_results['success'])}")
print(f"Failed: {len(train_results) - sum(train_results['success'])}")

# Verify output directories
processed_dir = os.path.abspath("../01_data/processed")
print(f"\nChecking processed directory: {processed_dir}")
print("Screenshots:", len(os.listdir(os.path.join(processed_dir, "screenshots"))))
print("HTML files:", len(os.listdir(os.path.join(processed_dir, "html"))))
print("Metadata files:", len(os.listdir(os.path.join(processed_dir, "metadata"))))

# Save results
train_results.to_csv(os.path.join(processed_dir, "processing_results.csv"), index=False)
